@model Proyecto_VitalPets_PIV.Models.Mascota

@{
    ViewData["Title"] = "Historial";
}

<h1>Detalles de Mascota</h1>

<div>
    <h4>Mascota</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Especie</dt>
        <dd class="col-sm-10">@Model.Especie</dd>

        <dt class="col-sm-2">Raza</dt>
        <dd class="col-sm-10">@Model.Raza</dd>

        <dt class="col-sm-2">Fecha de Nacimiento</dt>
        <dd class="col-sm-10">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Dueño</dt>
        <dd class="col-sm-10">@Model.Usuario?.Nombre</dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Volver a la Lista</a>
</div>
